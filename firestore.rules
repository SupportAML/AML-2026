rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authorized
    function isAuthorized() {
      return request.auth != null && (
             exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.uid)) ||
             exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email.lower())) ||
             request.auth.token.email.lower() == 'support@apexmedlaw.com' ||
             request.auth.uid == 'UjyoIcIzesNXrAwjzXtjV7V2uFs2'
      );
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
             (exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.uid)) && 
              get(/databases/$(database)/documents/authorizedUsers/$(request.auth.uid)).data.role in ['ADMIN', 'OWNER']) ||
             (exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email.lower())) && 
              get(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email.lower())).data.role in ['ADMIN', 'OWNER']) ||
             request.auth.token.email.lower() == 'support@apexmedlaw.com' ||
             request.auth.uid == 'UjyoIcIzesNXrAwjzXtjV7V2uFs2'
      );
    }
    
    // Cases - only authorized users can access
    match /cases/{caseId} {
      allow read: if isAuthorized();
      allow create: if isAuthorized();
      allow update: if isAuthorized();
      allow delete: if isAdmin();
      
      // Documents within cases
      match /documents/{documentId} {
        allow read: if isAuthorized();
        allow write: if isAuthorized();
      }
      
      // Annotations within cases
      match /annotations/{annotationId} {
        allow read: if isAuthorized();
        allow write: if isAuthorized();
      }
    }
    
    // Documents collection (top-level)
    match /documents/{documentId} {
      allow read: if isAuthorized();
      allow write: if isAuthorized();
    }
    
    // Annotations collection (top-level)
    match /annotations/{annotationId} {
      allow read: if isAuthorized();
      allow write: if isAuthorized();
    }
    
    // Authorized users - MUST be readable by authenticated users for login check
    // But only admins can modify
    match /authorizedUsers/{userId} {
      allow read: if request.auth != null;  // Allow all authenticated users to read (for login check)
      allow create: if request.auth != null && isAdmin();
      allow update: if request.auth != null && isAdmin();
      allow delete: if request.auth != null && isAdmin();
    }
    
    // Pending signup requests - public can create (blind write), only admins can read/modify
    match /pendingSignupRequests/{requestId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Invitation tokens - public can get by ID (validation), users can update (redemption), admins manage
    match /invitationTokens/{tokenId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create: if isAdmin();
      // Allow update if authenticated (user redeeming token) OR admin
      allow update: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    // Settings - only admins can modify
    match /settings/{settingId} {
      allow read: if isAuthorized();
      allow write: if isAdmin();
    }
  }
}
