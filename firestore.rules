rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authorized
    function isAuthorized() {
      return request.auth != null && (
             exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.uid)) ||
             (request.auth.token.email != null && exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email.lower()))) ||
             (request.auth.token.email != null && request.auth.token.email.lower() == 'support@apexmedlaw.com') ||
             request.auth.uid == 'UjyoIcIzesNXrAwjzXtjV7V2uFs2'
      );
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
             (exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/authorizedUsers/$(request.auth.uid)).data.role in ['ADMIN', 'OWNER']) ||
             (request.auth.token.email != null && exists(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email.lower())) &&
              get(/databases/$(database)/documents/authorizedUsers/$(request.auth.token.email.lower())).data.role in ['ADMIN', 'OWNER']) ||
             (request.auth.token.email != null && request.auth.token.email.lower() == 'support@apexmedlaw.com') ||
             request.auth.uid == 'UjyoIcIzesNXrAwjzXtjV7V2uFs2'
      );
    }

    // Check if user is assigned to this specific case (by UID or email)
    function isCaseAssigned(caseId) {
      return request.auth != null && (
        // Check assignedUserIds array for UID match
        (resource.data.assignedUserIds != null &&
         request.auth.uid in resource.data.assignedUserIds) ||
        // Check assignedUserEmails array for email match
        (request.auth.token.email != null &&
         resource.data.assignedUserEmails != null &&
         request.auth.token.email.lower() in resource.data.assignedUserEmails)
      );
    }

    // Check if user owns this specific case
    function isCaseOwner(caseId) {
      return request.auth != null &&
             resource.data.ownerId == request.auth.uid;
    }

    // Look up case and check if user has access (for documents/annotations)
    function canAccessCaseData(caseId) {
      let caseDoc = get(/databases/$(database)/documents/cases/$(caseId));
      return request.auth != null && (
        // Case owner
        caseDoc.data.ownerId == request.auth.uid ||
        // Assigned by UID
        (caseDoc.data.assignedUserIds != null &&
         request.auth.uid in caseDoc.data.assignedUserIds) ||
        // Assigned by email
        (request.auth.token.email != null &&
         caseDoc.data.assignedUserEmails != null &&
         request.auth.token.email.lower() in caseDoc.data.assignedUserEmails)
      );
    }

    // Cases - authorized users OR case-assigned users can access
    match /cases/{caseId} {
      allow read: if isAuthorized() || isCaseAssigned(caseId);
      allow create: if isAuthorized();
      allow update: if isAuthorized() || isCaseOwner(caseId);
      allow delete: if isAdmin() || (isAuthorized() && resource.data.ownerId == request.auth.uid);

      // Documents within cases - accessible to case-assigned users
      match /documents/{documentId} {
        allow read: if isAuthorized() || isCaseAssigned(caseId);
        allow write: if isAuthorized();
      }

      // Annotations within cases - accessible to case-assigned users
      match /annotations/{annotationId} {
        allow read: if isAuthorized() || isCaseAssigned(caseId);
        allow write: if isAuthorized();
      }
    }

    // Documents collection (top-level) - check case access if caseId present
    match /documents/{documentId} {
      allow read: if isAuthorized() ||
                     (resource.data.caseId != null && canAccessCaseData(resource.data.caseId));
      allow create, update: if isAuthorized();
      allow delete: if isAdmin() || (isAuthorized() && resource.data.caseId != null);
    }

    // Annotations collection (top-level) - check case access if caseId present
    match /annotations/{annotationId} {
      allow read: if isAuthorized() ||
                     (resource.data.caseId != null && canAccessCaseData(resource.data.caseId));
      allow create, update: if isAuthorized();
      allow delete: if isAdmin() || (isAuthorized() && resource.data.caseId != null);
    }

    // Authorized users - MUST be readable by authenticated users for login check
    // But only admins can modify; users may update their own name only (role/status protected)
    match /authorizedUsers/{userId} {
      allow read: if request.auth != null;  // Allow all authenticated users to read (for login check)
      allow create: if request.auth != null && isAdmin();
      allow update: if request.auth != null && (
        isAdmin() ||
        (request.auth.uid == userId &&
         request.resource.data.role == resource.data.role &&
         request.resource.data.status == resource.data.status)
      );
      allow delete: if request.auth != null && isAdmin();
    }

    // Pending signup requests - public can create (blind write), only admins can read/modify
    match /pendingSignupRequests/{requestId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Invitation tokens - public can get by ID (validation), users can update (redemption), admins manage
    match /invitationTokens/{tokenId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create: if isAdmin();
      // Allow update if authenticated (user redeeming token) OR admin
      allow update: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Settings - only admins can modify
    match /settings/{settingId} {
      allow read: if isAuthorized();
      allow write: if isAdmin();
    }

    // User profiles - users can read/write own profile only
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
